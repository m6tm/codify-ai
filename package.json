{
  "name": "codify-ai",
  "displayName": "Codify AI",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "codify-ai.completion",
      "title": "Codify AI: Complete your code",
      "category": "completion",
      "shortTitle": "Codify AI Completion"
    }],
    "configuration": {
        "type": "object",
        "title": "Example Configuration",
        "properties": {
            "autoComplete.triggerCharacters": {
                "type": "array",
                "default": [".", ">", ":", "@", "/"],  
                "description": "Characters that trigger auto complete suggestions"
            }
        }
    },
    "languages": [{
        "id": "javascript",
        "extensions": ["js"]
    }],
    "grammars": [{
        "language": "javascript",
        "scopeName": "source.js",
        "path": "./syntaxes/JavaScript.tmLanguage.json"
    }]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "clear && vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
